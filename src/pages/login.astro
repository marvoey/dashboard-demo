---
import '../styles/portal.css';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In | Broadridge Portal</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600&family=DM+Mono:wght@400;500&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: 'DM Sans', sans-serif;
      background: linear-gradient(135deg, #001A3A 0%, #0D2B4E 55%, #1B4B82 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 24px;
    }

    .login-card {
      background: #fff;
      border-radius: 12px;
      width: 100%;
      max-width: 400px;
      padding: 40px 36px 36px;
      box-shadow: 0 24px 64px rgba(0,0,0,0.3);
    }

    .login-logo {
      display: block;
      height: 44px;
      margin: 0 auto 28px;
    }

    h1 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #0D2B4E;
      text-align: center;
      margin-bottom: 4px;
    }

    .subtitle {
      font-size: 0.875rem;
      color: #64748B;
      text-align: center;
      margin-bottom: 28px;
    }

    .field {
      margin-bottom: 16px;
    }

    label {
      display: block;
      font-size: 0.8125rem;
      font-weight: 500;
      color: #0D2B4E;
      margin-bottom: 6px;
    }

    input {
      width: 100%;
      padding: 10px 14px;
      font-family: inherit;
      font-size: 0.9375rem;
      border: 1px solid #E2E8F0;
      border-radius: 8px;
      outline: none;
      transition: border-color 0.15s, box-shadow 0.15s;
      color: #0D2B4E;
    }

    input:focus {
      border-color: #2A6FC9;
      box-shadow: 0 0 0 3px rgba(42,111,201,0.15);
    }

    .btn {
      width: 100%;
      margin-top: 8px;
      padding: 11px;
      background: #0E9A8A;
      color: white;
      font-family: inherit;
      font-size: 0.9375rem;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.15s;
    }

    .btn:hover { background: #0B8070; }

    .divider {
      text-align: center;
      font-size: 0.75rem;
      color: #94A3B8;
      margin: 20px 0 0;
    }
  </style>
</head>
<body>
  <div class="login-card">
    <img src="https://www.broadridge.com/_Static-Assets/images/brodridgeLogo.svg" alt="Broadridge" class="login-logo" />
    <h1>Welcome back</h1>
    <p class="subtitle">Sign in to your Broadridge Portal</p>

    <form id="login-form">
      <div class="field">
        <label for="email">Email address</label>
        <input type="email" id="email" name="email" value="marvin.oey@optimizely.com" autocomplete="username" required />
      </div>
      <div class="field">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" value="123456" autocomplete="current-password" required />
      </div>
      <button type="submit" class="btn">Sign in</button>
    </form>

    <p class="divider">Demo portal â€” any credentials accepted</p>
  </div>

  <script>
    document.getElementById('login-form').addEventListener('submit', function(e) {
      e.preventDefault();
      window.location.href = '/broadridge';
    });
  </script>
</body>
</html>
