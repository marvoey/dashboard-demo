---
interface Props {
  barTitle: string;
  sources: { icon: string; name: string }[];
  tableTitle: string;
  tableSubtitle?: string;
}
const { barTitle, sources, tableTitle, tableSubtitle } = Astro.props;
---
<div class="comp comp-table span-3">
  <div class="comp-bar">
    <div class="comp-bar-left">
      <span>ðŸ—„ Data Table</span>
      <span style="opacity:0.4;">Â·</span>
      <span style="font-weight:500; text-transform:none; letter-spacing:0;">{barTitle}</span>
    </div>
    <div style="display:flex; gap:6px;">
      {sources.map(s => (
        <span class="data-source">{s.icon} {s.name}</span>
      ))}
    </div>
  </div>
  <div class="comp-body-flush">
    <div style="padding:14px 16px; border-bottom:1px solid var(--border); display:flex; align-items:center; justify-content:space-between;">
      <span class="card-title">{tableTitle}</span>
      {tableSubtitle && <span style="font-size:0.75rem; color:var(--text-muted);">{tableSubtitle}</span>}
    </div>
    <table>
      <slot />
    </table>
  </div>
</div>
