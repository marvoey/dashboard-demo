---
interface Props {
  noticeId: string;
  title: string;
  body: string;
  effectiveDate: string;
  expiryDate: string;
  source: string;
  badge?: string;
}
const {
  noticeId,
  title,
  body,
  effectiveDate,
  expiryDate,
  source,
  badge = "✦ Jurisdiction-Targeted",
} = Astro.props;
---

<div class="comp comp-cms span-3">
  <div class="comp-bar">
    <div class="comp-bar-left">
      <a
        href="/components/regulatory-notice"
        target="_blank"
        class="comp-explain-link">✦ CMS Component ↗</a
      >
      <span style="opacity:0.4;">·</span>
      <span style="font-weight:500; text-transform:none; letter-spacing:0;"
        >{source}</span
      >
    </div>
    <span class="opti-badge">{badge}</span>
  </div>
  <div class="comp-body">
    <div class="regulatory-notice">
      <span class="rn-icon">⚠</span>
      <div class="rn-body">
        <div class="rn-title">{title}</div>
        <p class="rn-text" set:html={body} />
        <div class="rn-meta">
          {noticeId} · Effective {effectiveDate} · Expires {expiryDate}
        </div>
      </div>
    </div>
  </div>
</div>
