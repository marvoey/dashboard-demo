---
export interface Props {
  title: string;
  persona: 'broker' | 'member' | 'employer';
}
const { title, persona } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | Trustmark Benefits Portal</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600&family=DM+Mono:wght@400;500&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    :root {
      --navy:       #0D2B4E;
      --navy-mid:   #1B4B82;
      --blue:       #2A6FC9;
      --blue-light: #EBF3FB;
      --teal:       #0E9A8A;
      --amber:      #F59E0B;
      --red:        #DC2626;
      --green:      #16A34A;
      --text:       #1A2533;
      --text-muted: #64748B;
      --border:     #E2E8F0;
      --surface:    #F8FAFC;
      --white:      #FFFFFF;
      --shadow-sm:  0 1px 3px rgba(13,43,78,0.08);
      --shadow-md:  0 4px 16px rgba(13,43,78,0.12);
      --radius:     8px;
    }

    html, body {
      height: 100%;
      font-family: 'DM Sans', sans-serif;
      color: var(--text);
      background: var(--surface);
      font-size: 1rem; /* â† single control for all font sizes */
      line-height: 1.6;
    }

    .portal-shell {
      display: grid;
      grid-template-columns: 240px 1fr;
      grid-template-rows: 62px 1fr;
      min-height: 100vh;
    }

    /* â”€â”€ Top bar â”€â”€ */
    .topbar {
      grid-column: 1 / -1;
      background: #002360;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 32px;
      gap: 24px;
    }

    .topbar-brand {
      display: flex;
      align-items: center;
      gap: 9px;
      flex-shrink: 0;
      text-decoration: none;
    }

    .topbar-persona-switcher {
      display: flex;
      gap: 36px;
      background: none;
      border-radius: 0;
      padding: 0;
    }

    .persona-btn {
      padding: 0;
      padding-bottom: 3px;
      border-radius: 0;
      font-size: 0.8125rem;
      font-weight: 700;
      letter-spacing: 1.1px;
      text-transform: uppercase;
      color: rgba(255,255,255,0.75);
      text-decoration: none;
      border-bottom: 2px solid transparent;
      transition: all 0.15s;
    }

    .persona-btn:hover { color: white; background: none; border-bottom-color: rgba(255,255,255,0.4); }
    .persona-btn.active { background: none; color: white; border-bottom-color: white; }

    .topbar-right {
      display: flex;
      align-items: center;
      gap: 20px;
      flex-shrink: 0;
    }

    .topbar-user {
      display: flex;
      align-items: center;
      gap: 9px;
    }

    .user-avatar {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background: rgba(255,255,255,0.15);
      border: 1px solid rgba(255,255,255,0.3);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.6875rem;
      font-weight: 700;
      color: white;
      letter-spacing: 0.3px;
    }

    .user-name {
      font-size: 0.8125rem;
      color: rgba(255,255,255,0.8);
      font-weight: 500;
    }

    /* â”€â”€ Font size control â”€â”€ */
    .font-size-control {
      display: flex;
      align-items: center;
      gap: 2px;
      background: rgba(255,255,255,0.08);
      border: 1px solid rgba(255,255,255,0.15);
      border-radius: 6px;
      padding: 2px;
    }

    .fs-btn {
      background: none;
      border: none;
      color: rgba(255,255,255,0.75);
      font-size: 0.75rem;
      font-weight: 700;
      font-family: inherit;
      padding: 3px 8px;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.15s;
      line-height: 1;
    }

    .fs-btn:hover {
      background: rgba(255,255,255,0.15);
      color: white;
    }

    .fs-display {
      font-size: 0.6875rem;
      font-weight: 600;
      color: rgba(255,255,255,0.5);
      min-width: 32px;
      text-align: center;
      font-family: 'DM Mono', monospace;
    }

    /* â”€â”€ Sidebar â”€â”€ */
    .sidebar {
      background: var(--white);
      border-right: 1px solid var(--border);
      padding: 20px 0;
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .sidebar-section-label {
      padding: 12px 20px 6px;
      font-size: 0.625rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-muted);
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 9px 20px;
      font-size: 0.84rem;
      font-weight: 500;
      color: var(--text-muted);
      text-decoration: none;
      border-left: 3px solid transparent;
      transition: all 0.15s;
    }

    .sidebar-link:hover { color: var(--navy); background: var(--blue-light); }
    .sidebar-link.active { color: var(--navy-mid); background: var(--blue-light); border-left-color: var(--blue); }

    .sidebar-icon { font-size: 1rem; width: 20px; text-align: center; }

    /* â”€â”€ Main content â”€â”€ */
    .main-content {
      padding: 28px 32px;
      overflow-y: auto;
    }

    /* â”€â”€ Opti badge â”€â”€ */
    .opti-badge {
      display: inline-flex;
      align-items: center;
      gap: 5px;
      background: #FFF7ED;
      border: 1px solid #FED7AA;
      border-radius: 4px;
      padding: 3px 8px;
      font-size: 0.625rem;
      font-weight: 600;
      color: #C2410C;
      letter-spacing: 0.3px;
      text-transform: uppercase;
    }

    /* â”€â”€ Shared card â”€â”€ */
    .card {
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow-sm);
    }

    .card-header {
      padding: 16px 20px;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .card-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--navy);
    }

    .card-body { padding: 20px; }

    /* â”€â”€ Page header â”€â”€ */
    .page-header {
      margin-bottom: 24px;
    }

    .page-header h1 {
      font-size: 1.375rem;
      font-weight: 600;
      color: var(--navy);
      letter-spacing: -0.4px;
    }

    .page-header p {
      font-size: 0.84rem;
      color: var(--text-muted);
      margin-top: 4px;
    }

    /* â”€â”€ Status badges â”€â”€ */
    .status {
      display: inline-flex;
      align-items: center;
      gap: 5px;
      font-size: 0.72rem;
      font-weight: 600;
      padding: 3px 8px;
      border-radius: 20px;
    }

    .status::before {
      content: '';
      width: 6px;
      height: 6px;
      border-radius: 50%;
    }

    .status-active { background: #DCFCE7; color: #15803D; }
    .status-active::before { background: #16A34A; }
    .status-pending { background: #FEF9C3; color: #A16207; }
    .status-pending::before { background: #CA8A04; }
    .status-renewal { background: #FEE2E2; color: #B91C1C; }
    .status-renewal::before { background: #DC2626; }

    /* â”€â”€ Grid helpers â”€â”€ */
    .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
    .grid-3 { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; }
    .gap-20 { display: flex; flex-direction: column; gap: 20px; }

    /* â”€â”€ Stat cards â”€â”€ */
    .stat-card {
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 18px 20px;
      box-shadow: var(--shadow-sm);
    }

    .stat-label {
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.8px;
      color: var(--text-muted);
      margin-bottom: 6px;
    }

    .stat-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--navy);
      letter-spacing: -0.5px;
      line-height: 1;
    }

    .stat-sub {
      font-size: 0.75rem;
      color: var(--text-muted);
      margin-top: 4px;
    }

    /* â”€â”€ Table â”€â”€ */
    table { width: 100%; border-collapse: collapse; font-size: 0.8125rem; }
    th {
      text-align: left;
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.6px;
      color: var(--text-muted);
      padding: 10px 14px;
      border-bottom: 2px solid var(--border);
      background: var(--surface);
    }
    td {
      padding: 12px 14px;
      border-bottom: 1px solid var(--border);
      color: var(--text);
      vertical-align: middle;
    }
    tr:last-child td { border-bottom: none; }
    tr:hover td { background: var(--blue-light); }

    .mono { font-family: 'DM Mono', monospace; font-size: 0.75rem; color: var(--text-muted); }

    /* â”€â”€ Data source label â”€â”€ */
    .data-source {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      font-size: 0.625rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-muted);
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 4px;
      padding: 2px 7px;
    }

    /* â”€â”€ CMS content zone â”€â”€ */
    .cms-zone {
      border: 2px dashed #FDBA74;
      border-radius: var(--radius);
      position: relative;
      background: #FFFBF7;
    }

    .cms-zone-label {
      position: absolute;
      top: -11px;
      left: 14px;
      background: #FFF7ED;
      border: 1px solid #FED7AA;
      border-radius: 4px;
      padding: 2px 8px;
      font-size: 0.625rem;
      font-weight: 700;
      color: #C2410C;
      letter-spacing: 0.4px;
      text-transform: uppercase;
    }

    /* â”€â”€ Announcement banner â”€â”€ */
    .announcement {
      background: linear-gradient(135deg, var(--navy) 0%, var(--navy-mid) 100%);
      color: white;
      border-radius: var(--radius);
      padding: 18px 22px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
    }

    .announcement-tag {
      display: inline-block;
      background: var(--teal);
      color: white;
      font-size: 0.625rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.8px;
      padding: 2px 8px;
      border-radius: 3px;
      margin-bottom: 6px;
    }

    .announcement h3 { font-size: 0.9375rem; font-weight: 600; letter-spacing: -0.2px; }
    .announcement p { font-size: 0.8125rem; color: rgba(255,255,255,0.75); margin-top: 3px; }

    .announcement-cta {
      flex-shrink: 0;
      background: white;
      color: var(--navy);
      font-size: 0.75rem;
      font-weight: 600;
      padding: 8px 16px;
      border-radius: 5px;
      text-decoration: none;
      white-space: nowrap;
    }

    /* â”€â”€ Product spotlight â”€â”€ */
    .spotlight-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px; padding: 16px; }

    .spotlight-item {
      background: white;
      border: 1px solid var(--border);
      border-radius: 6px;
      padding: 14px 16px;
    }

    .spotlight-item-tag {
      font-size: 0.625rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.6px;
      color: var(--blue);
      margin-bottom: 5px;
    }

    .spotlight-item h4 { font-size: 0.84rem; font-weight: 600; color: var(--navy); }
    .spotlight-item p { font-size: 0.75rem; color: var(--text-muted); margin-top: 3px; line-height: 1.5; }

    /* â”€â”€ Member claims â”€â”€ */
    .claim-row { display: flex; justify-content: space-between; align-items: center; padding: 12px 0; border-bottom: 1px solid var(--border); }
    .claim-row:last-child { border-bottom: none; }
    .claim-type { font-size: 0.84rem; font-weight: 500; }
    .claim-date { font-size: 0.75rem; color: var(--text-muted); }
    .claim-amount { font-size: 0.875rem; font-weight: 600; color: var(--navy); }
  </style>
</head>
<body>
